{
	"name": "xddesigners/silverstripe-twitter",
	"description": "Simple Twitter feed for Silverstripe",
	"type": "silverstripe-vendormodule",
	"keywords": ["silverstripe", "twitter", "widget"],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Remy Vaartjes",
			"email": "remyvaartjes@gmail.com"
		}
	],
	"support": {
		"issues": "http://github.com/tractorcow/silverstripe-twitter/issues"
	},
	"require": {
		"silverstripe/framework": "^4.0",
		"composer/installers": "*",
        "abraham/twitteroauth": "*"
	},
    "autoload": {
        "psr-4": {
            "XD\\Twitter\\": "src/"
        }
    },
	"suggest": {
		"silverstripe/widgets": "Put your tweets in your blog or page sidebar!"
	},
	"minimum-stability": "alpha"
}
